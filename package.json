{
  "name": "webpack-babel-phaser",
  "version": "1.0.0",
  "description": "A phaser template written in ES2015 with Babel and Webpack.",
  "author": "Paul McMonagle <mcmonagle.paul@gmail.com> (http://github.com/pmcmonagle)",
  "license": "MIT",
  "main": "src/main.js",
  "keywords": [
    "phaser",
    "babel",
    "webpack"
  ],
  "scripts": {
    "preclean": "mkdirp dist",
    "clean": "rimraf dist/*",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint --fix src",
    "build:html": "ncp static/index.html dist/index.html",
    "build:assets": "ncp static/assets dist/assets",
    "build:js": "webpack -p",
    "build": "npm run build:html && npm run build:assets && npm run build:js",
    "prebuild": "npm run clean",
    "prebuild:js": "npm run lint",
    "start": "webpack-dev-server --port 8001 --inline --hot --progress --open"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "eslint": "^4.12.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.8.0",
    "expose-loader": "^0.7.4",
    "mkdirp": "^0.5.1",
    "ncp": "^2.0.0",
    "rimraf": "^2.5.0",
    "webpack": "^3.9.0",
    "webpack-dev-server": "^2.9.5"
  },
  "eslintConfig": {
    "extends": "airbnb/base",
    "globals": {
      "Phaser": true
    },
    "rules": {
      "indent": [
        2,
        4
      ],
      "one-var": [
        1,
        "always"
      ],
      "no-multi-spaces": [
        2,
        {
          "exceptions": {
            "VariableDeclarator": true,
            "ImportDeclaration": true
          }
        }
      ]
    }
  },
  "dependencies": {
    "phaser-ce": "^2.9.2"
  }
}
